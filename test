      - name: Collate Success Results and Write to CSV
        run: |
          echo "Registry,Image,Version,Scan Tool,Status,Date" > success.csv
          grep ',success,' result-*.txt >> success.csv

      - name: Collate Failure Results and Write to CSV
        run: |
          echo "Registry,Image,Version,Scan Tool,Status,Date" > failure.csv
          grep ',failure,' result-*.txt >> failure.csv
