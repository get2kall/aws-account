name: CI Workflow

on:
  push:
    branches:
      - main

jobs:
  prepare:
    runs-on: ubuntu-latest
    outputs:
      matrix: ${{ steps.set-matrix.outputs.matrix }}
      snyk: ${{ steps.set-flags.outputs.snyk }}
      wiz: ${{ steps.set-flags.outputs.wiz }}
      aws: ${{ steps.set-flags.outputs.aws }}

    steps:
      - name: Checkout Repository
        uses: actions/checkout@v2

      - name: Get Image list
        id: set-matrix
        run: |
          sed -i '/^$/d' images.txt
          content=$(cat images.txt)
          json_content=""
          snyk="false"
          wiz="false"
          aws="false"
          while IFS='|' read -r line scan_tool; do
            if [[ $line == *":"* ]]; then
              IFS=':' read -r fullname version <<< "$line"
              IFS='/' read -r registry image <<< "$fullname"
              json_content+="{\"registry\": \"$registry\", \"image\": \"$image\", \"version\": \"$version\", \"scan_tool\": \"$scan_tool\"},"
              if [[ "$scan_tool" == "snyk" ]]; then
                snyk="true"
              elif [[ "$scan_tool" == "wiz" ]]; then
                wiz="true"
              fi
              if [[ "$registry" == "dkr.ecr" ]]; then
                aws="true"
              fi
            fi
          done <<< "$content"
          json_content="[${json_content%?}]"
          echo "::set-output name=matrix::$json_content"

      - name: Set Flags
        id: set-flags
        run: |
          echo "::set-output name=snyk::$snyk"
          echo "::set-output name=wiz::$wiz"
          echo "::set-output name=aws::$aws"

  update_images:
    needs: prepare
    runs-on: ubuntu-latest
    strategy:
      matrix: ${{fromJson(needs.prepare.outputs.matrix)}}
    steps:
      - name: Checkout Repository
        uses: actions/checkout@v2

      - name: Install Snyk CLI
        if: needs.prepare.outputs.snyk == 'true'
        run: |
          curl -LO https://github.com/snyk/snyk/releases/latest/download/snyk-linux
          chmod +x snyk-linux
          sudo mv snyk-linux /usr/local/bin/snyk

      - name: Install Wiz CLI
        if: needs.prepare.outputs.wiz == 'true'
        run: |
          curl -sSfL https://get.wiz.io/cli.sh | sudo sh

      - name: Login to Artifactory
        uses: docker/login-action@v2
        with:
          registry: ${{ secrets.ARTIFACTORY_URL }}
          username: ${{ secrets.ARTIFACTORY_USERNAME }}
          password: ${{ secrets.ARTIFACTORY_PASSWORD }}

      - name: Login to Docker Hub
        uses: docker/login-action@v2
        with:
          username: ${{ secrets.DOCKERHUB_USERNAME }}
          password: ${{ secrets.DOCKERHUB_TOKEN }}

      - name: Install AWS CLI
        if: needs.prepare.outputs.aws == 'true'
        run: |
          curl "https://awscli.amazonaws.com/awscli-exe-linux-x86_64.zip" -o "awscliv2.zip"
         Here is the continuation of the updated workflow:

```yaml
          unzip awscliv2.zip
          sudo ./aws/install --update
          aws --version

      - name: Configure AWS credentials
        if: needs.prepare.outputs.aws == 'true'
        uses: aws-actions/configure-aws-credentials@v1
        with:
          aws-access-key-id: ${{ secrets.AWS_ACCESS_KEY_ID }}
          aws-secret-access-key: ${{ secrets.AWS_SECRET_ACCESS_KEY }}
          aws-region: us-east-1

      - name: Run Shell Script
        env:
          SNYK_TOKEN: ${{ secrets.SNYK_TOKEN }}
        run: |
          chmod +x syncImages.sh
          ./syncImages.sh -i ${{ matrix.registry }}/${{ matrix.image }}:${{ matrix.version }} --scanTool ${{ matrix.scan_tool }}
