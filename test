# Base Image
FROM ubuntu:22.04

# Update system
RUN apt-get update -y && apt-get upgrade -y

# Install required packages
RUN apt-get install -y curl jq unzip

# Install AWS CLI
RUN curl "https://awscli.amazonaws.com/awscli-exe-linux-x86_64.zip" -o "awscliv2.zip"
RUN unzip awscliv2.zip
RUN sudo ./aws/install
RUN aws --version

# Install Snyk
RUN curl https://static.snyk.io/cli/latest/snyk-linux -o snyk
RUN chmod +x ./snyk
RUN mv ./snyk /usr/local/bin/

# Install WizCLI
RUN curl -o wizcli https://wizcli.app.wiz.io/latest/wizcli
RUN chmod +x wizcli
RUN mv wizcli /usr/local/bin/

# Default command
CMD ["bash"]
